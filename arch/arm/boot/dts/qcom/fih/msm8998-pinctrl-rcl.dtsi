&soc {
	tlmm: pinctrl@03400000 {
		/* Display */
		pmx_mdss: pmx_mdss {
			mdss_dsi_active: mdss_dsi_active {
				mux {
					pins = "gpio94";
				};

				config {
					pins = "gpio94";
				};
			};

			mdss_dsi_suspend: mdss_dsi_suspend {
				mux {
					pins = "gpio94";
				};

				config {
					pins = "gpio94";
				};
			};
		};

		mdss_dp_fih_hpd_active: mdss_dp_fih_hpd_active {
			mux {
				pins = "gpio115";
				function = "gpio";
			};

			config {
				pins = "gpio115";
				bias-disable;
				drive-strength = <16>;
				output-low;
			};
		};

		mdss_dp_fih_hpd_suspend: mdss_dp_fih_hpd_suspend {
			mux {
				pins = "gpio115";
				function = "gpio";
			};

			config {
				pins = "gpio115";
				bias-pull-down;
				drive-strength = <2>;
			};
		};
	};
};
